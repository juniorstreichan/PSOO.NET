@model IEnumerable<PSOO.Application.ViewModel.ClienteIndexListViewModel>

<div id="divListaCliente">
    <div class="row">
        <div class="col-xs-12">
            <table id="simple-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Nome Fantasia</th>
                        <th>CNPJ</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeFantasia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CNPJ)
                            </td>
                            <td>
                                <div class="hidden-sm hidden-xs btn-group">
                                    @Html.ActionLink("Editar", "Edit", new { cursoId = item.ClienteId }, new { @class = "btn btn-xs btn-primary" })

                                    @Html.ActionLink("Excluir", "Delete", new { cursoId = item.ClienteId }, new { @class = "btn btn-xs btn-danger" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>